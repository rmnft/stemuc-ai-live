# ==========================================
# STEMUC AUDIO FORGE - ENVIRONMENT VARIABLES
# ==========================================

# =============
# API TOKENS
# =============

# Hugging Face Token (REQUIRED for local diarization)
# Get from: https://huggingface.co/settings/tokens
# Must accept terms for: pyannote/segmentation-3.0 and pyannote/speaker-diarization-3.1
HUGGINGFACE_TOKEN=hf_your_token_here

# pyannoteAI API Key (OPTIONAL - Premium service)
# Get from: https://dashboard.pyannote.ai
# Benefits: 2x faster, +20% accuracy, -50% computational cost
PYANNOTE_API_KEY=your_api_key_here

# =============
# DEPLOYMENT
# =============

# Environment
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.vercel.app

# Backend URL (will be set by Railway automatically)
# RAILWAY_STATIC_URL=https://your-app.railway.app

# =============
# SYSTEM CONFIG
# =============

# File size limit (bytes) - 200MB for production
MAX_FILE_SIZE=209715200

# Directories
UPLOAD_DIR=uploads
OUTPUT_DIR=separated

# GPU usage (auto/true/false)
USE_GPU=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============
# RAILWAY SPECIFIC
# =============

# Railway will automatically set:
# PORT=8080 (or assigned port)
# RAILWAY_ENVIRONMENT=production
# RAILWAY_SERVICE_NAME=stemuc-backend 